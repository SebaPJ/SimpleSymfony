{% extends 'base.html.twig' %}

{% block page_title %}
    Contact - List
{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-header">
            <span class="pull-right">{{ pagination.getCurrentPageNumber * (pagination.items|length) }} / {{ pagination.getTotalItemCount }}</span>
            Users
        </div>
        <div class="box-body" style="padding: 0">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    {# sorting of properties based on query components #}
                    <th>Id</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Emails</th>
                    <th>Phones</th>
                    <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                {% for element in pagination %}
                    <tr>
                        <td><a href="{{ path('contact-edit', {'contact': element.id}) }}">{{ element.id }}</a></td>
                        <td title="{{ element.name }}">{{ element.name|slice(0, 25) }}</td>
                        <td title="{{ element.surname }}">{{ element.surname|slice(0, 25) }}</td>
                        <td>{% for key, value in element|getEmails %}{{ value.getAddress }}, {% endfor %}</td>
                        <td>{% for key, value in element|getPhones %}{{ value.getNumber }}, {% endfor %}</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="{{ path('contact-edit', {"contact": element.id}) }}" title="Edit"><span class="fa fa-refresh"> Edit</span></a>
                            <a class="btn btn-danger btn-sm" href="{{ path('contact-remove', {"contact": element.id}) }}" title="Remove"><span class="fa fa-circle"> Remove</span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="center text-center">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}