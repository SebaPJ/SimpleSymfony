{% extends 'base.html.twig' %}

{% block page_title %}
    Contact - View - {{ element.name }} {{ element.surname }}
{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-header">
            Contact details
        </div>
        <div class="box-body" style="padding: 0">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Field</th>
                    <th>Value</th>
                </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>Id</td>
                        <td>{{ element.id }}</td>
                    </tr>
                    <tr>
                        <td>Name</td>
                        <td>{{ element.name }}</td>
                    </tr>
                    <tr>
                        <td>Surname</td>
                        <td>{{ element.surname }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="box">
        <div class="box-header">
            <span class="pull-right">
                <a class="btn btn-info btn-sm" href="{{ path('contacts-phones-edit', {"contactId": element.id }) }}" title="Add number"><span class="fa fa-plus"> Add number</span></a>
            </span>
            Phones
        </div>
        <div class="box-body" style="padding: 0">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Number</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                {% for phone in element.getPhones %}
                    <tr>
                        <td><a href="{{ path('contacts-phones-edit', {'contactId': element.id, 'phoneId': phone.id }) }}">{{ phone.id }}</a></td>
                        <td title="{{ phone.number }}">{{ phone.number }}</td>
                        <td>
                            <a class="btn btn-success btn-sm" href="{{ path('contacts-phones-call', {"contactId": element.id, 'phoneId': phone.id }) }}" title="Call"><span class="fa fa-phone"> Call</span></a>
                            <a class="btn btn-success btn-sm" href="{{ path('contacts-phones-message', {"contactId": element.id, 'phoneId': phone.id }) }}" title="Message"><span class="fa fa-send"> Message</span></a>
                            <a class="btn btn-info btn-sm" href="{{ path('contacts-phones-edit', {"contactId": element.id, 'phoneId': phone.id }) }}" title="Edit"><span class="fa fa-pencil"> Edit</span></a>
                            <a class="btn btn-danger btn-sm" href="{{ path('contacts-phones-remove', {"contactId": element.id, 'phoneId': phone.id }) }}" title="Remove"><span class="fa fa-trash"> Remove</span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}