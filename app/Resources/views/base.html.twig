<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title %}Simple Symfony Project{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- Tell the browser to be responsive to screen width -->
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <link rel="stylesheet" href="{{ asset('bundles/app/kartik/css/fileinput.min.css') }}" media="all" type="text/css" />
        <link rel="stylesheet" href="{{ asset('bundles/app/admin-lte/bootstrap/css/bootstrap.min.css') }}"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
        <link rel="stylesheet" href="{{ asset('bundles/app/admin-lte/plugins/iCheck/flat/blue.css') }}"/>
        <link rel="stylesheet" href="{{ asset('bundles/app/admin-lte/plugins/morris/morris.css') }}"/>
        <link rel="stylesheet" href="{{ asset('bundles/app/admin-lte/plugins/jvectormap/jquery-jvectormap-1.2.2.css') }}"/>
        {#<link rel="stylesheet" href="{{ asset('bundles/app/admin-lte/plugins/datepicker/datepicker3.css') }}"/>#}
        {#<link rel="stylesheet" href="{{ asset('bundles/app/admin-lte/plugins/daterangepicker/daterangepicker.css') }}"/>#}
        {#<link rel="stylesheet" href="{{ asset('bundles/app/admin-lte/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css') }}"/>#}
        <link rel="stylesheet" href="{{ asset('bundles/app/admin-lte/dist/css/AdminLTE.css') }}"/>
        <link rel="stylesheet" href="{{ asset('bundles/app/admin-lte/dist/css/skins/_all-skins.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset('bundles/app/admin-lte/dist/css/add.css') }}"/>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
        <style>
            .font-none {
                font-size: 0;
            }
            .purple-row {
                background: #9592d9;
                color: #fff;
            }
            .purple-row a {
                color: #bbf;
            }
            .light-green-row {
                background: #caffce;
            }
        </style>
        {% block stylesheets %}{% endblock %}
    </head>
    <body class="hold-transition skin-black-light sidebar-mini sidebar-collapse">
        <div class="wrapper">
            <header class="main-header">
                <a href="{{ path('contacts-list') }}" class="logo">
                    <span class="logo-mini"><b>S</b>SP</span>
                    <span class="logo-lg"><b>S</b>imple<b>S</b>ymfony<b>P</b>roject</span>
                </a>
                <nav class="navbar navbar-static-top">
                    <a href="#" class="sidebar-toggle" style="height: 50px;" data-toggle="offcanvas" role="button"></a>
                    <div style="float: left; padding: 15px 15px; color: #333; border-right: 1px solid #eee;">
                        {% block page_title %}{% endblock %}
                    </div>
                </nav>
            </header>
            <aside class="main-sidebar">
                <section class="sidebar">
                    <ul class="sidebar-menu">
                        <li class="header">MAIN NAVIGATION</li>
                        <li class="{% if app.request.attributes.get('_route') == 'contacts-list' %}active{% endif %}">
                            <a href="{{ path('contacts-list') }}">
                                <i class="fa fa-home"></i> <span>Homepage</span>
                            </a>
                        </li>
                        <li class="{% if app.request.attributes.get('_route') == 'contacts-edit' %}active{% endif %}">
                            <a href="{{ path('contacts-edit') }}">
                                <i class="fa fa-plus"></i> <span>Add contact</span>
                            </a>
                        </li>
                    </ul>
                </section>
            </aside>

            <div class="content-wrapper">
                <section class="content-header">
                </section>
                <section class="messages" style="margin: 1% 1% 0;">
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type }}" role="alert"><strong>{{ type|capitalize }}!</strong> {{ message }}</div>
                        {% endfor %}
                    {% endfor %}
                </section>
                <section class="content">
                    {% block body %}{% endblock %}
                </section>
            </div>
            <div class="control-sidebar-bg"></div>
        </div>

        <script src="{{ asset('bundles/app/admin-lte/plugins/jQuery/jquery-2.2.3.min.js') }}"></script>
        <script src="{{ asset('bundles/app/kartik/js/plugins/sortable.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/app/kartik/js/plugins/purify.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/app/kartik/js/fileinput.min.js') }}"></script>
        <script src="{{ asset('bundles/app/admin-lte/bootstrap/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('bundles/app/kartik/themes/fa/theme.js') }}"></script>
        <script src="{{ asset('bundles/app/kartik/js/locales/<lang>.js') }}"></script>
        <script src="{{ asset('bundles/app/admin-lte/plugins/fastclick/fastclick.js') }}"></script>
        <script src="{{ asset('bundles/app/admin-lte/dist/js/app.min.js') }}"></script>
        <script src="{{ asset('bundles/app/admin-lte/plugins/sparkline/jquery.sparkline.min.js') }}"></script>
        <script src="{{ asset('bundles/app/admin-lte/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js') }}"></script>
        <script src="{{ asset('bundles/app/admin-lte/plugins/jvectormap/jquery-jvectormap-world-mill-en.js') }}"></script>
        <script src="{{ asset('bundles/app/admin-lte/dist/js/demo.js') }}"></script>
        <script src="{{ asset('bundles/app/highlight/highlight.pack.js') }}"></script>
        <script src="{{ asset('bundles/app/clipboard/js/clipboard.js') }}"></script>
        <script src="{{ asset('bundles/app/chart/js/moment.js') }}"></script>
        <script src="{{ asset('bundles/app/chart/js/Chart.min.js') }}"></script>
        <script src="{{ asset('bundles/app/chart/js/Chart.bundle.min.js') }}"></script>
        <script src="{{ asset('bundles/app/kartik/js/plugins/canvas-to-blob.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/app/datatable/jquery.dataTables.min.js') }}"></script>
        <script src="{{ asset('bundles/app/datatable/dataTables.bootstrap.min.js') }}"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

        <script>
            hljs.initHighlightingOnLoad();

            $('.btn-clipboard').tooltip({
                trigger: 'click',
                placement: 'bottom'
            });

            function setTooltip(btn, message) {
                $(btn).tooltip('hide')
                        .attr('data-original-title', message)
                        .tooltip('show');
            }

            function hideTooltip(btn) {
                setTimeout(function() {
                    $(btn).tooltip('hide');
                }, 1000);
            }

            var clipboard = new Clipboard('.btn-clipboard');

            clipboard.on('success', function(e) {
                e.clearSelection();
                setTooltip(e.trigger, 'Copied!');
                hideTooltip(e.trigger);
            });

            clipboard.on('error', function(e) {
                e.clearSelection();
                setTooltip(e.trigger, 'Failed!');
                hideTooltip(e.trigger);
            });
        </script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
